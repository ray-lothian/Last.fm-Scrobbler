{
  "manifest_version": 2,
  "name": "Last.fm Scrobbler for YouTube",
  "version": "0.1.1",

  "description": "Scrobbling YouTube music videos to Last.fm",

  "permissions": [
    "storage",
    "tabs",
    "https://ws.audioscrobbler.com/2.0/*"
  ],

  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png"
  },
  "content_scripts": [{
    "run_at": "document_start",
    "matches": [
      "*://tools.add0n.com/oauth.html?*"
    ],
    "js": [
      "data/authentication/inject.js"
    ]
  }, {
    "run_at": "document_start",
    "matches": [
      "*://*.youtube.com/*"
    ],
    "css": ["data/scrobbler/inject.css"],
    "js": [
      "data/love/protected.js",
      "data/scrobbler/protected.js",
      "data/player/protected.js"
    ]
  }],
  "background": {
    "persistent": false,
    "scripts": [
      "md5.min.js",
      "lastfm.js",
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    },
    "default_title": "Last.fm Scrobbler for YouTube"
  },
  "web_accessible_resources": [
    "data/love/unprotected.js",
    "data/scrobbler/unprotected.js"
  ]
}
